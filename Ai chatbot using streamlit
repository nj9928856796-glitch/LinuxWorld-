import streamlit as st

st.set_page_config(page_title="AI Chatbot", page_icon="ğŸ¤–", layout="wide")

st.title("ğŸ¤– AI Chatbot Using Streamlit")
st.write("Ask me anything...")

# Chat history
if "history" not in st.session_state:
    st.session_state.history = []

# Simple rule-based AI responses
def get_response(user_input):
    user_input = user_input.lower()

    if "hello" in user_input or "hi" in user_input:
        return "Hello! How can I help you today?"
    if "your name" in user_input:
        return "I am a simple AI chatbot created in Streamlit!"
    if "how are you" in user_input:
        return "I'm just code, but I'm running perfectly fine ğŸ˜„"
    if "bye" in user_input:
        return "Goodbye! Have a great day! ğŸ‘‹"
    
    # default response
    return "I didn't understand that, but I'm learning! ğŸ˜Š"

# Input box
user_input = st.text_input("You:", "")

if st.button("Send"):
    if user_input.strip() != "":
        response = get_response(user_input)
        st.session_state.history.append(("You", user_input))
        st.session_state.history.append(("Bot", response))

# Display chat history
st.write("### ğŸ’¬ Chat History")
for sender, msg in st.session_state.history:
    if sender == "You":
        st.markdown(f"**ğŸ§‘ You:** {msg}")
    else:
        st.markdown(f"**ğŸ¤– Bot:** {msg}")
